                        <x:String>UZS</x:String>
                        <x:String>UAH</x:String>
                        <x:String>CZK</x:String>
                        <x:String>SEK</x:String>
                        <x:String>CHF</x:String>
                        <x:String>RSD</x:String>
                        <x:String>ZAR</x:String>
                        <x:String>KRW</x:String>
                        <x:String>JPY</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <DatePicker x:Name="DateSelector" Grid.Column="2" Date="{x:Static sys:DateTime.Now}" />
            <Button Text="Get Exchange Rates" Clicked="OnGetExchangeRatesClicked" Grid.Column="2" Grid.Row="2"/>

        </Grid>
    </VerticalStackLayout>

    

</ContentPage>
